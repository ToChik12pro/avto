@model List<avto.DataBase.User>

<h2>Список пользователей</h2>


@if (Model != null && Model.Any())
{
    <table class="styled-table">
        <thead>
            <tr>
                <th>Имя пользователя</th>
                <th>Email</th>
                <th>Телефон</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Нет данных для отображения.</p>
}

<style>

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 16px;
        margin-bottom: 30px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        background-color: #222; /* Темный фон */
    }

        .styled-table thead tr {
            background: linear-gradient(90deg, #ff4b5c, #333);
            color: white;
            text-align: left;
            font-weight: bold;
        }

        .styled-table th, .styled-table td {
            padding: 20px 25px; /* Увеличенные отступы внутри ячеек */
            border: 1px solid #444;
        }

        .styled-table tbody tr {
            background-color: rgba(43, 43, 43, 0.8); /* Темный фон для строк */
            border-bottom: 1px solid #444;
        }

            .styled-table tbody tr:nth-of-type(even) {
                background-color: rgba(50, 50, 50, 0.8);
            }

            .styled-table tbody tr:last-of-type {
                border-bottom: 2px solid #333;
            }

            .styled-table tbody tr:hover {
                background-color: rgba(60, 60, 60, 0.9); /* Изменение фона при наведении */
                transition: background-color 0.3s ease;
                cursor: pointer;
            }
</style>