@model List<avto.DataBase.Order>

<h2>Заказы</h2>
<table class="styled-table">
    <thead>
        <tr>
            <th>ID Заказа</th>
            <th>Клиент</th>
            <th>Сотрудник</th>
            <th>Дата заказа</th>
            <th>Статус</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.Client?.Name</td>
                <td>@order.User?.Username</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>
<style>

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 16px;
        margin-bottom: 30px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        background-color: #222; /* Темный фон */
    }

        .styled-table thead tr {
            background: linear-gradient(90deg, #ff4b5c, #333);
            color: white;
            text-align: left;
            font-weight: bold;
        }

        .styled-table th, .styled-table td {
            padding: 20px 25px; /* Увеличенные отступы внутри ячеек */
            border: 1px solid #444;
        }

        .styled-table tbody tr {
            background-color: rgba(43, 43, 43, 0.8); /* Темный фон для строк */
            border-bottom: 1px solid #444;
        }

            .styled-table tbody tr:nth-of-type(even) {
                background-color: rgba(50, 50, 50, 0.8);
            }

            .styled-table tbody tr:last-of-type {
                border-bottom: 2px solid #333;
            }

            .styled-table tbody tr:hover {
                background-color: rgba(60, 60, 60, 0.9); /* Изменение фона при наведении */
                transition: background-color 0.3s ease;
                cursor: pointer;
            }
</style>
