            display: block;
            max-width: 100%; /* Максимальная ширина изображений */
            height: auto;
            margin: auto; /* Центрирование изображений */
        }
    .containerModel {
        background-color: #111; /* Немного светлее черный для контраста */
        padding: 20px;
        border-radius: 8px;
    }
        .card {
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .card-img-top {
            max-height: 200px;
            object-fit: cover;
        }


  ol{
        color: #fff;
        padding: 20px;
        border-radius: 8px;
  }
  ul{
        color: #fff;
  }

    .card-title, .card-text {
        color: #fff; /* Белый текст внутри карточек */
    }
    p{
        color: #fff; /* Белый текст */
        text-align: center;

    }

    h1, h2 {
        color: #fff; /* Белый текст */
        text-align: center;
    }

    .card {
        background-color: #222; /* Темно-серый фон карточки */
        border: 1px solid #444; /* Темно-серая граница */
        border-radius: 4px;
    }

